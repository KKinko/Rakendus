@page
@model LibaryDataBase.Pages.BookItems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Book Items</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookItem[0].Libary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BookItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libary)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BookID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BookID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
