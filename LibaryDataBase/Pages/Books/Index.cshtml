@page
@model Rakendus.Pages.BooksPage
@{
    ViewData["Title"] = "Index";
    ViewData["SubTitle"] = Model?.GetType()?.Name?.Replace("Page", string.Empty) ?? "Unspecified";
}


<h1>@ViewData["SubTitle"]</h1>

<p>
    <a asp-page="Create" asp-page-handler="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Items[0].Title)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Author) </th>
            <th>@Html.DisplayNameFor(model => model.Items[0].Field)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].PublishDate)</th>
            <th>@Html.DisplayNameFor(model => model.Items[0].PageCount)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Author)</td>
            <td>@Html.DisplayFor(modelItem => item.Field)</td>
            <td>@Html.DisplayFor(modelItem => item.PublishDate)</td>
            <td>@Html.DisplayFor(modelItem => item.PageCount)</td>
            <td>
              <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.ID">Edit</a> |
              <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.ID">Details</a> |
              <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
