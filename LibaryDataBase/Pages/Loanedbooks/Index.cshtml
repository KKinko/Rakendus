@page
@model LibaryDataBase.Pages.Loanedbooks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Loaned Books</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoanedBook[0].LoanedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanedBook[0].LoanedDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanedBook[0].LoanedReturned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanedBook[0].OverdueFine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanedBook[0].LoanedStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LoanedBook) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanedDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanedReturned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverdueFine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanedStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LoanedID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LoanedID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LoanedID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
