@page 
@model LibaryDataBase.Pages.Readers.ReadersPage

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reader</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler = "Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reader.ID" />

            <partial name = "_EditPerson"/>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-page-handler="Index" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
